@model TeamBoard

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PositionId" class="control-label">Kateqoriya</label>
                <select asp-for="PositionId" class="form-control">
                    @foreach (var item in ViewData["Positions"] as IEnumerable<Position>)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ad</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Soyad</label>
                <input asp-for="Surname" class="form-control" id="answer" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedinUrl" class="control-label">Linkedin Url</label>
                <input asp-for="LinkedinUrl" class="form-control" />
                <span asp-validation-for="LinkedinUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacebookUrl" class="control-label">FacebookUrl</label>
                <input asp-for="FacebookUrl" class="form-control" id="answer" />
                <span asp-validation-for="FacebookUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwitterUrl" class="control-label">Twitter Url</label>
                <input asp-for="TwitterUrl" class="form-control" id="answer" />
                <span asp-validation-for="TwitterUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PinterestUrl" class="control-label">Pinterest Url</label>
                <input asp-for="PinterestUrl" class="form-control" id="answer" />
                <span asp-validation-for="PinterestUrl" class="text-danger"></span>
            </div>
            <div class="form-group" style="min-height:300px;">
                <div class="card">
                    <div class="card-body">
                        <img class="img-fluid" src="@Model.ImageUrl" />
                    </div>
                    <div class="card p-3 mt-3">
                        <input type="file" asp-for="ImageUrl" name="ImageUrl" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="@DefaultConstantValue.ADD_MESSAGE" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@DefaultConstantValue.RETURN_TO_BACK</a>
</div>
