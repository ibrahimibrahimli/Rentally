@model Booking

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Maşın</label>
                <select asp-for="UserId" class="form-control">
                    @foreach (var item in ViewData["Users"] as IEnumerable<User>)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CarID" class="control-label">Maşın</label>
                <select asp-for="CarID" class="form-control">
                    @foreach (var item in ViewData["Cars"] as IEnumerable<CarDto>)
                    {
                        <option value="@item.Id">@item.Model</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PickUpLocation" class="control-label">Başlanğıc Yeri</label>
                <input asp-for="PickUpLocation" class="form-control" />
                <span asp-validation-for="PickUpLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickUpDateTime" class="control-label">Başlanğıc tarixi</label>
                <input asp-for="PickUpDateTime" class="form-control" id="answer" />
                <span asp-validation-for="PickUpDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DropOffLocation" class="control-label">Bitiş Yeri</label>
                <input asp-for="DropOffLocation" type"date" min="0" class="form-control" id="answer" />
                <span asp-validation-for="DropOffLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DropOffDateTime" class="control-label">Bitiş tarixi</label>
                <input asp-for="DropOffDateTime" min="0" class="form-control" id="answer" />
                <span asp-validation-for="DropOffDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Maşın</label>
                <select asp-for="Status" class="form-control">
                        <option value="1">Qəbul et</option>
                        <option value="2">Ləğv et</option>
                    
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="@DefaultConstantValue.ADD_MESSAGE" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@DefaultConstantValue.RETURN_TO_BACK</a>
</div>
