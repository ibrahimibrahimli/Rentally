@model Car

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarCategoryId" class="control-label">Kateqoriya</label>
                <select asp-for="CarCategoryId" class="form-control">
                    @foreach (var item in ViewData["CarCategories"] as IEnumerable<CarCategory>)
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label">Marka</label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Model</label>
                <input asp-for="Model" class="form-control" id="answer" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label">İli</label>
                <input asp-for="Year" min="0" class="form-control" id="answer" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoorCount" class="control-label">Qapı Sayı</label>
                <input asp-for="DoorCount" min="0" class="form-control" id="answer" />
                <span asp-validation-for="DoorCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label">Sayı</label>
                <input asp-for="Count" min="0" class="form-control" id="answer" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerCount" class="control-label">Sərnişin Sayı</label>
                <input asp-for="PassengerCount" min="0" class="form-control" id="answer" />
                <span asp-validation-for="PassengerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerDay" class="control-label">Günlük Qiyməti</label>
                <input asp-for="PricePerDay" min="0" class="form-control" id="answer" />
                <span asp-validation-for="PricePerDay" class="text-danger"></span>
            </div>
            <div class="form-group" style="min-height:300px;">
                <div class="card">
                    <div class="card-body">
                        <img class="img-fluid" src="@Model.ImageUrl" />
                    </div>
                    <div class="card p-3 mt-3">
                        <input type="file" asp-for="ImageUrl" name="ImageUrl" />
                    </div>
                </div>
            </div>
            <div class="form-group d-flex align-items-center">
                <span style="margin-right:1rem;">Ana Səhifə?:</span>
                <input asp-for="IsHomePage" type="checkbox"    />
            </div>
            <div class="form-group">
                <input type="submit" value="@DefaultConstantValue.ADD_MESSAGE" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@DefaultConstantValue.RETURN_TO_BACK</a>
</div>
