@model ApplicationUserDto



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="Name" class="control-label">Xəbər Başlığı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Xəbər Mətni</label>
                <textarea asp-for="Surname" class="form-control" id="answer"></textarea>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Xəbər Mətni</label>
                <textarea asp-for="UserName" class="form-control" id="answer"></textarea>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Xəbər Mətni</label>
                <textarea asp-for="Email" class="form-control" id="answer"></textarea>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Xəbər Mətni</label>
                <textarea asp-for="PhoneNumber" class="form-control" id="answer"></textarea>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@string.Join(", ", Model.Roles)" class="control-label">Xəbər Mətni</label>
                <textarea asp-for="@string.Join(", ", Model.Roles)" class="form-control" id="answer"></textarea>
                <span asp-validation-for="@string.Join(", ", Model.Roles)" class="text-danger"></span>
            </div>

            
            
            <div class="form-group" style="min-height:300px;">
                <div class="card">
                    <div class="card-body">
                        <img class="img-fluid" src="ImageUrl" />
                    </div>
                    <div class="card p-3 mt-3">
                        <input type="file" asp-for="ImageUrl" name="ImageUrl" />
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="@DefaultConstantValue.ADD_MESSAGE" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@DefaultConstantValue.RETURN_TO_BACK</a>
</div>
