
@model HomeViewModel 
<!-- content begin -->
<div class="no-bottom no-top" id="content">
    <div id="top"></div>
    <section id="de-carousel" class="no-top no-bottom carousel slide carousel-fade" data-mdb-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators z1000">
            <li data-mdb-target="#de-carousel" data-mdb-slide-to="0" class="active"></li>
            <li data-mdb-target="#de-carousel" data-mdb-slide-to="1"></li>
            <li data-mdb-target="#de-carousel" data-mdb-slide-to="2"></li>
        </ol>

        <!-- Inner -->
        <div class="carousel-inner position-relative">
            <!-- Single item -->
            <div class="carousel-item active jarallax">
                <img src="@Model.Sliders[0].ImageUrl" class="jarallax-img" alt="">
                <div class="mask">
                    <div class="no-top no-bottom">
                        <div class="h-100 v-center">
                            <div class="container">
                                <div class="row gx-5 align-items-center">
                                    <div class="col-lg-6 offset-lg-3 text-center mb-sm-30">
                                        <h1 class="s3 mb-3 wow fadeInUp">@Model.Sliders[0].Title</h1>
                                        <p class="lead wow fadeInUp" data-wow-delay=".3s">@Model.Sliders[0].Description</p>
                                        <div class="spacer-10"></div>
                                        <a class="btn-line mb10 wow fadeInUp" data-wow-delay=".6s" href="#">Kəşfet</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Single item -->
            <div class="carousel-item jarallax">
                <img src="@Model.Sliders[1].ImageUrl" class="jarallax-img" alt="">
                <div class="mask">
                    <div class="no-top no-bottom">
                        <div class="h-100 v-center">
                            <div class="container">
                                <div class="row gx-5 align-items-center">
                                    <div class="col-lg-6 offset-lg-3 text-center mb-sm-30">
                                        <h1 class="s3 mb-3 wow fadeInUp">@Model.Sliders[1].Title</h1>
                                        <p class="lead wow fadeInUp" data-wow-delay=".3s">@Model.Sliders[1].Description</p>
                                        <div class="spacer-10"></div>
                                        <a class="btn-line mb10 wow fadeInUp" data-wow-delay=".6s" href="#">Kəşfet</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Single item -->
            <div class="carousel-item jarallax">
                <img src="@Model.Sliders[2].ImageUrl" class="jarallax-img" alt="">
                <div class="mask">
                    <div class="no-top no-bottom">
                        <div class="h-100 v-center">
                            <div class="container">
                                <div class="row gx-5 align-items-center">
